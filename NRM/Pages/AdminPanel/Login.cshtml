@page
@model NRM.Pages.AdminPanel.LoginModel
@{
    ViewData["Title"] = "Вход";
}

<section class="form-signIn w-100 m-auto">
    <form method="post">
        <div class="form-floating">
            <input class="form-control" asp-for="Input.Login">
            <label asp-for="Input.Login"></label>
            <span asp-validation-for="Input.Login"></span>
        </div>
        <div class="form-floating">
            <input class="form-control" asp-for="Input.Password">
            <label asp-for="Input.Password"></label>
            <span asp-validation-for="Input.Password"></span>   
        </div>
        <input class="btn btn-primary w-100 py-2" type="submit" value="Войти">
    </form>
    <div asp-validation-summary="ModelOnly"></div>
</section>