@page
@model NRM.Pages.AdminPanel.GroupParcel.IndexModel
@{
    ViewData["Title"] = "Список групповых посылок";
}

<main>
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">@ViewData["Title"]</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <a class="btn btn-sm btn-outline-secondary" asp-page="Create">Добавление групповой посылки</a>
            </div>
        </div>
    </div>

    @if (Model.GroupParcels != null && Model.GroupParcels.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Трек-номер</th>
                    <th>Дата и время отправки</th>
                    <th>Число посылок</th>
                    <th>Место отправки</th>
                    <th>Место доставки</th>
                    <th>Статус</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var groupParcel in Model.GroupParcels)
                {
                    <tr>
                        <td><a class="" asp-page="View" asp-route-id="@groupParcel.Id">@groupParcel.TrackNumber</a></td>
                        <td>@groupParcel.DepartureDateTime</td>
                        <td>@groupParcel.ParcelCount</td>
                        <td>@groupParcel.PlaceOfDeparture</td>
                        <td>@groupParcel.PlaceOfDelivery</td>
                        <td>@groupParcel.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Список групповых посылок пуст.</p>
    }

</main>